.newpage  {
  background-color: #fad666;
  font-family: 'Times New Roman', Times, serif;
  font-size: 80%;
  width: 100%;
  height: 100%; 
}
  .newpage .tit {
    width: 80%;
    height: 80px;
    margin: 0 auto;
    display: block; 
  }
  .newpage  .index_pic {
    width: 100%;
    margin-top: 10%; }
  .newpage  div.click {
    z-index: 3;
    width: 50%;
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    height: 10%;
    top: 60%; }
  .newpage  .cont {
    width:88%;
    height:75%;
    margin:2% 2%;
    background-color:#fff;
    border-radius:.4rem;
    padding:4%;
    position:absolute;}
.radio {
    display: block;
    margin-bottom: 10px;
}
.newpage  .cont .useless {
  margin-bottom: 3rem; }
.newpage  .cont .pic {
  margin: 2% auto; }
.newpage .cont .next_question {
  margin: 0 auto;
  border: none;
  background-color: #ec5b5d;
  color: #fff;
  height: 2rem;
  padding: 0 0.6rem 0 1rem;
  border-radius: 1.3rem;
  font-size: 0.8rem;
  font-family: inherit;
  letter-spacing: .4rem;
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%); 
}